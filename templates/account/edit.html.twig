{% extends 'base.html.twig' %}

{% block title %}Chat - Settings{% endblock %}

{% block section_class %}editUser{% endblock %} 
{% block content_class %}justify-content-center align-items-center{% endblock %}
{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" type="text/css" href="{{ asset('css/_forms.css') }}">
{% endblock %}
{% block content %}
<div class="col-sm-6 text-center my-3">
    {{ include('forms/user_form.html.twig', {
        header_text: 'Account Settings',
        button_text: 'Update'
    }) }}
</div>
<div class="col-sm-12 text-center my-3">
    <a href="{{ path('app_change_password') }}">Change Password</a>
</div>
{% endblock %}
{% block javascripts %}
    {{ parent() }}
    <script type="module" src="{{ asset('js/helpers/_errorHelper.js') }}"></script>
    <script type="module" src="{{ asset('js/_uploadImageForm.js') }}"></script>
{% endblock %}
