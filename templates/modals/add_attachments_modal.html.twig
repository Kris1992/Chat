<div class="modal fade" id="js-add-attachments-modal" tabindex="-1" role="dialog" aria-labelledby="add-attachments-modal-title" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title text-muted" id="add-attachments-modal-title">
                    Add attachments
                </h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="container-fluid">
                    <div class="row">
                        <div class="col-12">
                            <form action="#" method="POST" enctype="multipart/form-data" class="dropzone js-dropzone">
                                <div class="fallback">
                                    <input name="file" type="file" multiple />
                                </div>
                                <input type="hidden" name="token" value="{{ csrf_token('upload') }}" id="js-token"/>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>
