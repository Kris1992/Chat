{% extends 'base.html.twig' %}

{% block title %}Chat - Petitions{% endblock %}

{% block section_class %}petitions{% endblock %} 
{% block content_class %}{% endblock %}
{% block content %}

<div class="col-sm-12 text-center mt-5">
    {% if pagination.getTotalItemCount > 0 %}
        <h2 class="mb-3 font-weight-normal text-uppercase text-purple">
            Your petitions ({{ pagination.getTotalItemCount }})
        </h2>
        <a href="{{ path('support_petition_add') }}" class="d-inline-block btn btn-primary float-right" data-toggle="tooltip" data-placement="top" title="Create new petition">
            Create
            <span class="fas fa-plus-circle"></span>
        </a>
        <div class="col-sm-12 col-md-4 mx-auto mb-2">
            {{ knp_pagination_filter(pagination, {}) }}
        </div>
            <div class="list my-3">
                <div class="row">
                    <div class="col-sm-12 text-left">
                        <span>Sort by:</span>
                        <span {% if pagination.isSorted('p.type') %} class="sorted" {% endif %}>
                            {{ knp_pagination_sortable(pagination, 'Reason', 'p.type') }}
                        </span>
                        <span class="text-muted">||</span>
                        <span {% if pagination.isSorted('p.createdAt') %} class="sorted" {% endif %}>
                            {{ knp_pagination_sortable(pagination, 'Date', 'p.createdAt') }}
                        </span>
                        <span class="text-muted">||</span>
                        <span {% if pagination.isSorted('p.isOpened') %} class="sorted" {% endif %}>
                            {{ knp_pagination_sortable(pagination, 'Closed', 'p.isOpened') }}
                        </span>
                    </div>
                    {% for petition in pagination %}
                        <div class="col-md-4 my-3">
                            <div class="card text-center {{ petition.isOpened ? '' : 'text-white bg-dark' }}">
                                <h5 class="card-header text-orange">
                                    {{ petition.type }}
                                </h5>
                                <div class="card-body">
                                    <h5 class="card-title text-purple">
                                        {{ petition.title | u.truncate(40, '...') }}
                                    </h5>
                                    <p class="card-text text-muted">
                                        {{ petition.description | u.truncate(40, '...') }}
                                    </p>
                                    <a href="#" class="btn btn-primary">View</a>
                                </div>
                                <div class="card-footer text-muted">
                                    {{ time_diff(petition.createdAt) }}
                                </div>
                            </div>
                        </div>
                    {% endfor %}
                </div>
            </div>
        <div class="navigation">
            {{ knp_pagination_render(pagination, null, {}, {
                'align': 'center'
            }) }}
            {{ include('paginator/per_page.html.twig', {
                span_color: 'text-primary',
                per_page: [6,12,18]
            }) }}
        </div>
    {% else %}
        <h2 class="mb-3 font-weight-normal text-uppercase text-purple">
            Your petitions
        </h2>
        <div class="col-sm-12 col-md-4 mx-auto mb-2">
            {{ knp_pagination_filter(pagination, {}) }}
        </div>
        {% include 'empty_table.html.twig' %}
    {% endif %}
</div>
{% endblock %}
{% block javascripts %}
    {{ parent() }}
    <script type="text/javascript">
        $(document).ready(function () {
            $('[data-toggle="tooltip"]').tooltip({trigger: 'hover'});
            $('[data-toggle="tooltip"]').on('click', function () {
                $(this).tooltip('hide')
            });
        });
    </script>
{% endblock %}