{% extends 'base.html.twig' %}

{% block title %}Chat - Dashboard{% endblock %}

{% block section_class %}editChat{% endblock %} 
{% block content_class %}justify-content-center align-items-center{% endblock %}
{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" type="text/css" href="{{ asset('css/_forms.css') }}">
{% endblock %}
{% block content %}
<div class="col-12 text-center">
    <a href="{{ path('admin_chat')}}" class="btn btn-info float-left">
        <span class="far fa-list-alt"></span>
    </a>
</div>
<div class="col-sm-6 text-center my-3">
    {{ include('forms/chat_form.html.twig', {
        header_text: 'Edit chat room',
        button_text: 'Edit'
    }) }}
</div>
{% endblock %}
{% block javascripts %}
    {{ parent() }}
    <script type="module" src="{{ asset('js/helpers/_errorHelper.js') }}"></script>
    <script type="module" src="{{ asset('js/_uploadImageForm.js') }}"></script>
{% endblock %}
